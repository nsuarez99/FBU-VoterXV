<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/signupPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="42dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="55dp"
        android:layout_toEndOf="@+id/signupPic"
        android:text="Party:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/signupParty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="57dp"
        android:layout_toEndOf="@+id/party"
        android:textSize="16dp"
        android:inputType="number"
        tools:text="Democrat" />

    <TextView
        android:id="@+id/age"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/party"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/signupPic"
        android:text="Age:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/signupAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupParty"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="125dp"
        android:layout_toEndOf="@+id/age"
        android:inputType="number"
        android:textSize="16dp"
        tools:text="20" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="298dp"
        android:layout_marginBottom="25dp"
        android:onClick="saveProfile"
        android:text="Save" />


</RelativeLayout>